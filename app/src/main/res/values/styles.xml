<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_style_main">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>

    </style>

    <style name="label_style_title_heading">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="label_style_sub">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="label_style_progress">
        <item name="android:layout_marginStart">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>

</resources>
